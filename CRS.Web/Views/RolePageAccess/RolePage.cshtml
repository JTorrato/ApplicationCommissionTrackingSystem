                        <td><input type="checkbox" checked="@tmp.CanDelete" onclick="return false;" onkeydown="return false;"></td>
                        <td><input type="checkbox" checked="@tmp.CanView" onclick="return false;" onkeydown="return false;"></td>
                        <td><input type="checkbox" checked="@tmp.CanPrint" onclick="return false;" onkeydown="return false;"></td>
                   </tr>
                }
            </tbody>
