                    <th>Can Delete</th>
                    <th>Can View</th>
                    <th>Can Print</th>
           
	           </tr>
	        </thead>
	        <tbody>
		        @foreach (RolePageAccess tmp in ViewBag.RolePageAccess)
                {           
                    <tr class="gradeX"> 
                        <td>@Html.RouteLink(@tmp.PageTitle, "Default",new {Controller = "RolePageAccess",Action = "Edit", id=tmp.ID, RoleId = tmp.RoleId})</td>
