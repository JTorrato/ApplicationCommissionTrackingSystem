@using CRS.BusinessEntities
@{
    ViewBag.Title = "Index";
}

@section styles {

  <style>
    ui-dialog-titlebar-close {
        visibility: hidden;
    }

    table.dataTable {
       border-collapse: collapse;
       clear: both;
       margin: 55px auto 0;
       width: 100%;
    }

    tfoot th {
        background: none !important;
     }  
    </style>

}

@section jquerylibrary{
     <script src="~/Scripts/jquery-1.7.2.min.js"></script>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $('#listtable').dataTable();
    </script>
}

<div  class="float-left">
<table border="0" class="display" id="listtable">
	<thead>
		<tr>
			<th>User Name</th>
			<th>First Name</th>
			<th>Middle Name</th>
		    <th>Last Name</th>
        </tr>
	</thead>
	<tbody>
		
             
            @foreach (User tmp in ViewBag.PendingRegistrations)
               {           
                <tr class="gradeX"> 
                <td>@Html.RouteLink(@tmp.UserName, "Default",new {Controller = "RegistrationApproval",Action = "Edit", id=tmp.ID})</td>
                <td>@tmp.FirstName</td>
                <td>@tmp.MiddleName</td>
                <td>@tmp.LastName</td>
                </tr>
               }
               
            
       
    </tbody>
    <tfoot>
		<tr>
			<th>User Name</th>
			<th>First Name</th>
			<th>Middle Name</th>
		    <th>Last Name</th>
		</tr>
	</tfoot>
</table>
    
<br />
<hr />    

</div>



